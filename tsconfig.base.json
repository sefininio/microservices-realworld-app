{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@microservices-realworld-example-app/auth": ["libs/auth/src/index.ts"],
      "@microservices-realworld-example-app/data-access": [
        "libs/data-access/src/index.ts"
      ],
      "@microservices-realworld-example-app/models": [
        "libs/models/src/index.ts"
      ],
      "@microservices-realworld-example-app/shared": [
        "libs/shared/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
